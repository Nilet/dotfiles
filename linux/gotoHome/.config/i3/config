#my gruvbox colorscheme
set $black #282828
set $bg #282828
set $blue #377375
set $cyan #578e57
set $green #98971a
set $magenta #a04b73
set $red #be0f17
set $white #978771
set $yellow #cc881a
set $darkgray #1e1e1e
set $purple #b16286
set $aqua #8ec07c

# class                 border|backgr|text|indicator|child_border
client.focused          $green $green $darkgray $purple $darkgray
client.focused_inactive $darkgray $darkgray $yellow $purple $darkgray
client.unfocused        $darkgray $darkgray $yellow $purple $darkgray
client.urgent           $red $red $white $red $red

set $mod Mod4
set $sup Mod1

#Font for window titles. 
font pango: Terminus 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec /usr/bin/alacritty

# kill focused window
bindsym $mod+Shift+q kill
bindsym F4 kill

# start dmenu 
bindsym $mod+d exec --no-startup-id dmenu_run -i -fn 'Terminus-9' -nb '#282828' -nf '#cc881a' -sb '#98971a' -sf '#282828'

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right


# split in vertical orientation
bindsym $mod+v split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
bindsym F1 fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# toggle tiling / floating
bindsym $mod+Tab floating toggle


# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle


# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+y	exec --no-startup-id /home/matheus/.local/bin/i3resize left
bindsym $mod+u	exec --no-startup-id /home/matheus/.local/bin/i3resize down
bindsym $mod+i	exec --no-startup-id /home/matheus/.local/bin/i3resize up
bindsym $mod+o	exec --no-startup-id /home/matheus/.local/bin/i3resize right

bindsym $sup+Tab workspace next
bindsym $sup+Shift+Tab workspace prev
#focus the latest urgent window
bindsym $mod+x [urgent=latest] focus
workspace_auto_back_and_forth yes
#jumps to the last workspace
bindsym F2 workspace back_and_forth
#focus the last focused window in the same workspace 
exec --no-startup-id ~/.local/bin/lastwindow
exec ~/.local/scripts/picom.sh
bindsym $mod+F2 [con_mark=_last] focus

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		#tray_output none
		position bottom
        status_command i3status --config ~/.config/i3/i3status.conf | ~/.local/scripts/i3currentMedia/pystatus.py
		colors {
				# bar background color
				background $bg
				# text color used for blocks that do not have a color specified.
				statusline $yellow
				# workspaces section            
				#                    border  backgr. text
				focused_workspace    $green $green $darkgray
				inactive_workspace   $darkgray $darkgray $yellow
				active_workspace     $darkgray $darkgray $yellow
				urgent_workspace     $red $red $bg
			}
}

#disable titlebar
for_window [class="^.*"] border pixel 1

#Wallpaper
exec --no-startup-id feh --bg-tile /home/matheus/Pictures/wallpaper.png

#"hardware" shit
exec_always --no-startup-id setxkbmap -option caps:swapescape
exec_always --no-startup-id xinput disable "SynPS/2 Synaptics TouchPad"
exec_always --no-startup-id xinput set-prop "TPPS/2 IBM TrackPoint" "libinput Accel Speed" -0.5
exec_always --no-startup-id xinput set-prop "Logitech G203 Prodigy Gaming Mouse" "libinput Accel Speed" -0.75
exec_always --no-startup-id numlockx
exec unclutter
exec dunst
exec pasystray
exec playerctld daemon
#Screenshot shit
bindsym Print		exec --no-startup-id scrot - | xclip -selection c -t image/png -i
bindsym --release Control+Print	exec --no-startup-id import /tmp/screenshot.png && xclip -selection c -t image/png -i /tmp/screenshot.png


#Assigning specific windows settings
for_window [class="mpv"] floating enable
for_window [class="pavucontrol"] floating enable
for_window [class="thunar"] floating enable
assign [class="firefox"] 1
assign [class="discord"] 2
assign [class="TelegramDesktop"] 3
for_window [class="Spotify"] move to workspace $ws4
assign [class="thunderbird"] 5
assign [class="qBittorrent"] 9

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="FormInicial"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

#uses jumpapp to open or jump to current opened window independent of where it is
bindsym F6 exec "jumpapp firefox"
bindsym F10 exec "jumpapp thunderbird"
bindsym F9 exec "jumpapp telegram-desktop"
bindsym Insert exec "jumpapp spotify-launcher"
bindsym F7 exec "jumpapp alacritty"
bindsym F8 exec "jumpapp discord-ptb"
bindsym $mod+e exec "jumpapp thunar"

# Pulse Audio controls (has no volume limit, and this is a feature, not a bug)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86AudioMicMute exec pactl set-source-mute 1 toggle                     
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPlay exec playerctl play-pause
# bRIghtness control require `sudo pacman -S brightnessctl`
bindsym XF86MonBrightnessUp exec brightnessctl set 10%+
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
